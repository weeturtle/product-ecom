datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id String @id @default(cuid())

  name        String
  description String?
  varients    Varient[]
  skus        SKU[]

  defaultSku   SKU?    @relation(name: "defaultSku", fields: [defaultSkuId], references: [id])
  defaultSkuId String? @unique

  @@map("product")
}

model Varient {
  id String @id @default(cuid())

  name String

  product    Product      @relation(fields: [productId], references: [id])
  productId  String
  skuOptions SKU_Option[]

  @@map("varient")
}

model SKU {
  id String @id @default(cuid())

  price  Float
  images String[]
  stock  Int

  options SKU_Option[]

  product   Product @relation(fields: [productId], references: [id])
  productId String

  defaultSku Product? @relation(name: "defaultSku")
}

model SKU_Option {
  skuId     String
  varientId String

  value String

  sku     SKU     @relation(fields: [skuId], references: [id])
  Varient Varient @relation(fields: [varientId], references: [id])

  @@id([skuId, varientId])
  @@map("sku_option")
}
